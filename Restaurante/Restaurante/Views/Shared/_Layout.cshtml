<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>AppLayout - @ViewBag.Title</title>


    <link href="~/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/Assets/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Assets/jquery/jquery.min.js"></script>
    <script src="~/Assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Js/sb-admin-2.js"></script>
    <script src="~/Assets/metisMenu/metisMenu.min.js"></script>
    <link href="~/Content/site.css" rel="stylesheet" />
    <style type="text/css">

        .side {
            margin: 15px;
            border: none;
            left:0;
        }
        *{
            padding: 0;
            margin: 0;
            left: 0;
            color: #191919;
        }
    </style>
</head>
<body>
    <div id="wrapper">
        <nav id="nav" class="navbar navbar-static-top" role="navigation" style="padding:0;">
            <ul class="nav navbar-top-links navbar-left" style="padding:0px 0px 0px 10px;">
                <li> <h1>Margerito</h1></li>
            </ul>
            <ul class="nav navbar-top-links navbar-right" style="padding:15px 0px 0px 0px;">
                <li>
                    <form class="search-form" style="margin-right:20px;">
                        <input type="search" value="" placeholder="Search" class="search-input">
                        <button type="submit" class="search-button">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                                <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                            </svg>
                        </button>
                    </form>
                </li>
                <li class="dropdown">
                    <a data-toggle="dropdown" href="#">
                        <span class="spanNav">Conta e usuario</span></a>
                    <ul class="dropdown-menu dropdown-alerts" style="border:none; padding:20px; background-color: rgb(245,245,245); box-shadow: 2px 2px 5px 0 rgba(0,0,0,.2); width:200px;">
                        @Html.Partial("_LoginPartial")
                    </ul>
                </li>
                <li> <a href="#"><span class="spanNav">Desenvolvedores </span></a></li>
            </ul>
            
        </nav>

        <div class="navbar sidebar ">
            <div class="sidebar-nav navbar-collapse">
                <ul id="side-menu">
                    <li style="border:none; padding:10px;">



                    </li>
                    <li style="border:none; padding:10px;">
                        <a href="~/">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-bar-chart-fill" fill="#9381FF" xmlns="http://www.w3.org/2000/svg">
                                <rect width="4" height="5" x="1" y="10" rx="1" />
                                <rect width="4" height="9" x="6" y="6" rx="1" />
                                <rect width="4" height="14" x="11" y="1" rx="1" />
                            </svg>
                            <span class="texto">&nbsp;  Dashboard</span>
                        </a>
                    </li>
                    <li style="border:none; padding:10px;">
                        <a href="#">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="#9381FF" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                            </svg>
                            <span class="texto">&nbsp; Funcionarios</span><span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                @Html.ActionLink("Visualizar", "Select", "Funcionarios", new { area = "RH" }, null)
                            </li>
                            <li>
                                @Html.ActionLink("Cadastrar", "Create", "Funcionarios", new { area = "RH" }, null)
                            </li>
                        </ul>
                    </li>
                    <li style="border:none; padding:10px;">
                        <a href="">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-egg-fried" fill="#9381FF" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M13.665 6.113a1 1 0 0 1-.667-.977L13 5a4 4 0 0 0-6.483-3.136 1 1 0 0 1-.8.2 4 4 0 0 0-3.693 6.61 1 1 0 0 1 .2 1 4 4 0 0 0 6.67 4.087 1 1 0 0 1 1.262-.152 2.5 2.5 0 0 0 3.715-2.905 1 1 0 0 1 .341-1.113 2.001 2.001 0 0 0-.547-3.478zM14 5c0 .057 0 .113-.003.17a3.001 3.001 0 0 1 .822 5.216 3.5 3.5 0 0 1-5.201 4.065 5 5 0 0 1-8.336-5.109A5 5 0 0 1 5.896 1.08 5 5 0 0 1 14 5z" />
                                <circle cx="8" cy="8" r="3" />
                            </svg>
                            <span class="texto">&nbsp; Produtos</span><span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="~/Produto/Select" class="item"><span class="texto">Visualizar</span></a>
                            </li>
                            <li>
                                <a href="~/Produto/Create" class="item"><span class="texto">Cadastrar</span></a>
                            </li>
                        </ul>
                    </li>
                    <li style="border:none; padding:10px;">
                        <a href="">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-fill" fill="#9381FF" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                            </svg>
                            <span class="texto">&nbsp; Pedidos</span><span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="~/Pedido/Select" class="item"><span class="texto">Visualizar todos</span></a>
                            </li>
                            <li>
                                <a href="~/Pedido/Create" class="item"><span class="texto">Novo pedido</span></a>
                            </li>
                        </ul>
                    </li>
                    <li style="border:none; padding:10px;">
                        <a href="">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-calendar-fill" fill="#9381FF" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V5h16V4H0V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5z" />
                            </svg>
                            <span class="texto">&nbsp; Reservas</span><span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="~/Reserva/Select" class="item"><span class="texto">Visualizar reservas</span></a>
                            </li>
                            <li>
                                <a href="~/Reserva/Create" class="item"><span class="texto">Reservar uma mesa</span></a>
                            </li>
                        </ul>
                    </li>
                    <li style="border:none; padding:10px;">
                        <a href="">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-truck" fill="#9381FF" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M0 3.5A1.5 1.5 0 0 1 1.5 2h9A1.5 1.5 0 0 1 12 3.5V5h1.02a1.5 1.5 0 0 1 1.17.563l1.481 1.85a1.5 1.5 0 0 1 .329.938V10.5a1.5 1.5 0 0 1-1.5 1.5H14a2 2 0 1 1-4 0H5a2 2 0 1 1-3.998-.085A1.5 1.5 0 0 1 0 10.5v-7zm1.294 7.456A1.999 1.999 0 0 1 4.732 11h5.536a2.01 2.01 0 0 1 .732-.732V3.5a.5.5 0 0 0-.5-.5h-9a.5.5 0 0 0-.5.5v7a.5.5 0 0 0 .294.456zM12 10a2 2 0 0 1 1.732 1h.768a.5.5 0 0 0 .5-.5V8.35a.5.5 0 0 0-.11-.312l-1.48-1.85A.5.5 0 0 0 13.02 6H12v4zm-9 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm9 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                            </svg>
                            <span class="texto">&nbsp; Entregas</span><span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="~/Entregas/Select" class="item"><span class="texto">Visualizar entregas</span></a>
                            </li>
                            <li>
                                <a href="~/Entregas/Create" class="item"><span class="texto">Cadastrar entrega</span></a>
                            </li>
                        </ul>
                    </li>
                    <li style="border:none; padding:10px;">
                        <a href="">
                            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-credit-card-fill" fill="#9381FF" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v1H0V4z" />
                                <path fill-rule="evenodd" d="M0 7v5a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7H0zm3 2a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1h1a1 1 0 0 0 1-1v-1a1 1 0 0 0-1-1H3z" />
                            </svg>
                            <span class="texto">&nbsp; Caixa</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div id="page-wrapper" style="border:none;">
            @RenderBody()
        </div>
    </div>
    @Scripts.Render("~/bundles/inputmask")
    @RenderSection("scripts", required: false)
</body>
</html>