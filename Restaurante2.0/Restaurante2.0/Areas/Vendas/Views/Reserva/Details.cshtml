@model RestauranteMexicano.Areas.Vendas.Models.Reserva

@{
    ViewBag.Title = "Details";
}

<div class="animated animatedFadeInUp fadeInUp">
    <div class="tabela">
        <br>
        <div class="primeira">
            <img src="~/Content/imagens/taco.GIF" width="100%" height="100%" />
        </div>
        <div class="segunda">
            @using (Html.BeginForm())
            {

                @Html.LabelFor(model => model.idMesa, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.idMesa, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.quantidadeCadeiras, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.quantidadeCadeiras, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.dataReserva, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.dataReserva, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.LabelFor(model => model.hora, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.hora, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                
                @Html.LabelFor(model => model.idCliente, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.idCliente, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })

                @Html.ActionLink("Voltar", "Index")

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }

            }
        </div>
    </div>
</div>